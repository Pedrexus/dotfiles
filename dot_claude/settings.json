{
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Read(~/.zshrc)",
      "WebFetch(domain:*)",
      "Bash(git config:*)"
    ],
    "deny": [
      "Bash(sudo:*)"
    ]
  },
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "OTEL_METRICS_EXPORTER": "otlp"
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "taskmaster",
    "context7"
  ]
}
